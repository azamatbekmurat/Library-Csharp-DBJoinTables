<!DOCTYPE html>
<html>
  <body>
    <h1>Library</h1>
    <hr />
    <h3>All authors:</h3>
    @if (Model.Count != 0)
    {
      <ul>
      @foreach (var author in Model)
      {
        <li><a href='/authors/@author.GetId()'>@author.GetName()</a></li>
      }
      </ul>
    }
    <h4><a href="/authors/new">Add new author</a></h4>
    <p><a href="/">Return to Homepage</a></p>

  </body>
</html>
