@{
  Layout = "_Layout";
}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>All authors:</h3>
      <hr />
      @if (Model.Count != 0)
      {
        <ul>
        @foreach (var author in Model)
        {
          <li><a href='/authors/@author.GetId()'>@author.GetName()</a></li>
        }
        </ul>
      }
      <h4><a href="/authors/new">Add new author</a></h4>
      <h4><a href="/">Return to Home</a></h4>
      <br><br><br>
    </div>
  </div>
</div>
