<!DOCTYPE html>
<html>
  <body>
    <h1>Library</h1>
    <hr />
    <h3>All books:</h3>
    @if (Model.Count != 0)
    {
      <ul>
      @foreach (var book in Model)
      {
        <li><a href='/books/@book.GetId()'>@book.GetName()</a></li>
      }
      </ul>
    }

    <h4><a href="/books/new">Add new book</a></h4>
    <p><a href="/">Return to Homepage</a></p>

  </body>
</html>
